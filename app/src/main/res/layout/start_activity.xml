<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Sent this code to connect your friend:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCode"
        android:layout_weight="1"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="147dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/textViewGeneratedCode"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/textViewCode"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="After sending code wait here for him"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textViewWait"
        android:textSize="20sp"
        android:layout_below="@+id/textViewGeneratedCode"
        android:layout_alignLeft="@+id/textViewCode"
        android:layout_alignStart="@+id/textViewCode" />
</RelativeLayout>
